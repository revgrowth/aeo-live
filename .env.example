# =============================================================================
# AEO.LIVE Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://aeo_user:aeo_password@localhost:5432/aeo_live?schema=public"

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# JWT AUTHENTICATION
# -----------------------------------------------------------------------------
# Generate secure secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-jwt-secret-change-this-in-production"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-change-this-in-production"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# -----------------------------------------------------------------------------
# STRIPE (Billing)
# -----------------------------------------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs (create these in Stripe Dashboard > Products)
STRIPE_PRICE_STARTER_MONTHLY="price_..."
STRIPE_PRICE_STARTER_ONETIME="price_..."
STRIPE_PRICE_GROWTH_MONTHLY="price_..."
STRIPE_PRICE_GROWTH_ONETIME="price_..."
STRIPE_PRICE_SCALE_MONTHLY="price_..."
STRIPE_PRICE_SCALE_ONETIME="price_..."
STRIPE_PRICE_SCALE_PLUS_MONTHLY="price_..."
STRIPE_PRICE_SCALE_PLUS_ONETIME="price_..."

# -----------------------------------------------------------------------------
# OAUTH: GOOGLE
# -----------------------------------------------------------------------------
# Create at: https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID (Web application)
# 2. Add authorized redirect URI: http://localhost:3001/api/v1/auth/google/callback
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:3001/api/v1/auth/google/callback"

# -----------------------------------------------------------------------------
# OAUTH: MICROSOFT (Azure AD)
# -----------------------------------------------------------------------------
# Create at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps/ApplicationsListBlade
# 1. Register new application
# 2. Add redirect URI: http://localhost:3001/api/v1/auth/microsoft/callback
# 3. Create client secret under "Certificates & secrets"
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
MICROSOFT_CALLBACK_URL="http://localhost:3001/api/v1/auth/microsoft/callback"

# -----------------------------------------------------------------------------
# ANTHROPIC (Claude LLM)
# -----------------------------------------------------------------------------
# Get from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=""

# -----------------------------------------------------------------------------
# EMAIL (SMTP)
# -----------------------------------------------------------------------------
# For development, you can use services like Mailtrap, Resend, or Postmark
# Production: Use your actual SMTP provider
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@aeo.live"

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
NODE_ENV="development"
API_PORT="3001"
WEB_PORT="3000"
API_URL="http://localhost:3001"
WEB_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS="http://localhost:3000"

# Rate limiting
RATE_LIMIT_TTL="60"
RATE_LIMIT_MAX="100"
